	INNER JOIN product_sku s
    on c.product_id=p.product_id
    and i.item_id=p.product_id
	and c.sku_id=s.sku_id
    WHERE i.is_main=1
    and c.cart_id in
    <foreach collection="cids" item="cid" separator="," open="(" close=")">
        #{cid}
    </foreach>
  </select>
